{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MAGI Daily Summary",
  "type": "object",
  "required": ["date", "events", "tasks", "schedule"],
  "properties": {
    "date": {"type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$"},
    "events": {
      "type": "array",
      "items": {"$ref": "configs/extracted.schema.json#/definitions/evidenceItem"}
    },
    "tasks": {
      "type": "array",
      "items": {"$ref": "configs/extracted.schema.json#/definitions/evidenceItem"}
    },
    "schedule": {
      "type": "array",
      "items": {"$ref": "configs/extracted.schema.json#/definitions/evidenceItem"}
    }
  }
}
