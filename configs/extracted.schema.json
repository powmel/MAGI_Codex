{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MAGI Extracted Output",
  "type": "object",
  "required": ["source", "transcript", "events", "tasks", "schedule"],
  "properties": {
    "source": {
      "type": "object",
      "required": ["file", "sessionId", "processedAt"],
      "properties": {
        "file": {"type": "string"},
        "sessionId": {"type": "string"},
        "processedAt": {"type": "string", "format": "date-time"}
      }
    },
    "transcript": {
      "type": "object",
      "required": ["segmentCount", "pass2OverrideCount"],
      "properties": {
        "segmentCount": {"type": "integer", "minimum": 0},
        "pass2OverrideCount": {"type": "integer", "minimum": 0}
      }
    },
    "events": {
      "type": "array",
      "items": {"$ref": "#/definitions/evidenceItem"}
    },
    "tasks": {
      "type": "array",
      "items": {"$ref": "#/definitions/evidenceItem"}
    },
    "schedule": {
      "type": "array",
      "items": {"$ref": "#/definitions/evidenceItem"}
    }
  },
  "definitions": {
    "evidenceItem": {
      "type": "object",
      "required": ["id", "confidence", "evidence"],
      "properties": {
        "id": {"type": "string"},
        "title": {"type": "string"},
        "description": {"type": "string"},
        "confidence": {"type": "number", "minimum": 0, "maximum": 1},
        "evidence": {
          "type": "object",
          "required": ["chunkId", "windowSeconds", "snippet"],
          "properties": {
            "chunkId": {"type": "string"},
            "windowSeconds": {
              "type": "object",
              "required": ["start", "end"],
              "properties": {
                "start": {"type": "number"},
                "end": {"type": "number"}
              }
            },
            "snippet": {"type": "string"}
          }
        }
      }
    }
  }
}
